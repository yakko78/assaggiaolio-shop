<!DOCTYPE html>
<html>
<head>
  <title>AssaggiaolioShop</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <%= render('shared/navbar') %>
  </div>

<div class="container">
  <div class="col-md-8">
    <%= yield %>
  </div>
  <div class="col-md-4" id="cart">
    <%= render @cart unless @cart.nil? %>
  </div>
</div>


</body>
</html>
