<%= simple_form_for @cart, url: pay_path do |c| %>

  <%= c.simple_fields_for :billing_address do |b| %>
  <!-- Dati Utente -->
  <div class="col-md-4">
    <h2>I tuoi dati</h2>
    <h5>Privato o azienda? Seleziona la tipologia esatta</h5>

    <div class="radio">
      <div class="row">
        <div class="col-md-6">
          <label class="radio-inline">
            <input type="radio" name="optionsRadios" value="1" checked="">Privato
          </label>
        </div>
        <div class="col-md-6">
          <label class="radio-inline">
            <input type="radio" name="optionsRadios" value="2">Azienda
          </label>
        </div>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
            <%= b.input :firstname, class: 'form-control' %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= b.input :lastname, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= b.input :company, class: 'form-control', required: false %>
    </div>
    <div class="form-group">
      <%= b.input :address, class: 'form-control' %>
    </div>
    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <%= b.input :zip, class: 'form-control' %>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="form-group">
          <%= b.input :city, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= b.input :province, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= b.input :state, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= b.input :telephone, class: 'form-control', required: false %>
    </div>
    <div class="form-group">
      <%= b.input :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= b.input :vat, class: 'form-control' %>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox" value="" checked> Spedire allo stesso indirizzo
      </label>
    </div>

  </div>

  <% end %>

  <div class="col-md-4">

    <h2>Metodo di Spedizione</h2>
    <h5>Scegli un metodo di spedizione</h5>
    <div class="radio">
      <div class="row">
        <div class="col-md-6">
          <label class="radio-inline">
            <input type="radio" name="optionsShipping" value="1">Italia
          </label>
        </div>
        <div class="col-md-6">
          <label class="radio-inline">
            <input type="radio" name="optionsShipping" value="2">Estero
          </label>
        </div>
      </div>

      <br>
      <select class="form-control" name="">
        <option>Seleziona...</option>
        <option>Niacaragua</option>
      </select>


    </div>

    <h2>Metodo di Pagamento</h2>

    <div class="radio">
      <label>
        <input type="radio" name="PaymentType" value="1" checked="">PayPal
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name="PaymentType" value="1" >Carta di Credito
      </label>
    </div>

  </div>
  <div class="col-md-4">
    <h2>Rivedi ordine</h2>

    <%= render @cart %>

    <br><br>
    <%= c.submit 'Termina e paga', class: 'btn btn-default btn-primary' %>

  </div>

  <% end %>
