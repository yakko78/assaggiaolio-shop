<div class="container">
  <h1>Carrello</h1>
  <% if @cart.line_items.present? %>
  <div class="col-md-12">
      <table class="table">
        <%= render @cart.line_items, checkout: false %>
        <tr>
          <td colspan="3" style="text-align:right">Totale: <%= number_to_currency(@cart.total_price) %></td>
        </tr>
      </table>
  </div>
  <div class="col-md-12">
    <div class="pull-right">
      <%= button_to "Continua gli acquisti", store_url, method: :get, class: "btn btn-default" %>&nbsp;
      <%= button_to "Termina e paga", new_order_path, method: :get, class: "btn btn-primary" %>
    </div>
  </div>


  <% else %>
    <div class="class-md-12">
      Il tuo carrello Ã¨ vuoto
    </div>
  <% end %>


</div>
