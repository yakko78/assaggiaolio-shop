<h1>Carrello</h1>
<% if cart.line_items.present? %>
<div class="col-md-12">
    <table class="table">
      <%= render(cart.line_items) %>
      <% if session[:temporary_shipping_cost] %>
      <tr>
        <td colspan="3" style="text-align:right">Spedizione: <%= number_to_currency(session[:temporary_shipping_cost]) %></td>
      </tr>
      <% end %>
      <tr>
        <td colspan="3" style="text-align:right">Totale: <%= number_to_currency(cart.total_price) %></td>
      </tr>
    </table>
</div>
